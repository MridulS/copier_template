[metadata]
name = {{projectname}}
author = Scipp contributors (https://github.com/scipp)
description = {{description}}
license = BSD
license_files = LICENSE
long_description = file: README.md
long_description_content_type = text/markdown
url = https://scipp.github.io/{{projectname}}
project_urls =
    Bug Tracker = https://github.com/scipp/{{projectname}}/issues
classifiers =
    Programming Language :: Python :: 3
    Programming Language :: Python :: 3 :: Only
    Programming Language :: Python :: {{min_python}}
    License :: OSI Approved :: BSD License
    Operating System :: OS Independent

[options]
package_dir =
    = src
packages = find:
install_requires =
python_requires = >={{min_python}}
include_package_data = True

[options.packages.find]
where = src

[options.package_data]
{{projectname}} = py.typed

[flake8]
# See https://black.readthedocs.io/en/stable/the_black_code_style/current_style.html#line-length
max-line-length = 88
extend-ignore = E203
